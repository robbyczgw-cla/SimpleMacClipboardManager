{
  "name": "simple-mac-clipboard-manager",
  "version": "0.8.1",
  "type": "module",
  "description": "A lightweight clipboard manager for macOS",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "release": "npm run build && npm run sign && npm run zip",
    "sign": "codesign --force --deep --sign - 'release/mac-arm64/SimpleMacClipboardManager.app'",
    "zip": "cd release/mac-arm64 && zip -r ../SimpleMacClipboardManager-$(node -p \"require('../../package.json').version\")-arm64.zip SimpleMacClipboardManager.app",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/react-window": "^1.8.8",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0"
  }
}
